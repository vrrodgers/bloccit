<%= form_for ([@topic, @sponsoredpost]) do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic name" %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
    </div>
    <div class="form-group">
        <%= f.label :Price %>
        <%= f.number_field :price %>
    </div>
    
    <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>