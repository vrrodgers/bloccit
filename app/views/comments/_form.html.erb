 <h6 >Add a comment</h6>
<%= form_for([post, comment]) do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment" %>
  </div>

  <%= f.submit "Submit Comment", class: 'btn btn-primary' %>
<% end %>